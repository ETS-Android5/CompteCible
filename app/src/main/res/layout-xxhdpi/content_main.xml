<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_MainActivity">


    <EditText
        android:id="@+id/result"
        android:layout_width="183dp"
        android:layout_height="91dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:gravity="end"
        android:inputType="textMultiLine"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ArrowValue"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/result"
        app:layout_constraintTop_toTopOf="@+id/result" />

    <Spinner
        android:id="@+id/archer"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:text="archer"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/endNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toEndOf="@+id/ArrowValue"
        app:layout_constraintTop_toTopOf="@+id/ArrowValue"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/endNumber"
        android:layout_width="179dp"
        android:layout_height="23dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/archer"
        app:layout_constraintTop_toBottomOf="@id/archer"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="68dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result">

        <ImageView
            android:id="@+id/imageCible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_cible"
            android:contentDescription="DessinCible"
            android:gravity="center"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button10"
                    style="@android:style/Widget.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_weight="1"
                    android:background="#F8FF3B"
                    android:lineSpacingExtra="8sp"
                    android:text=" 10 " />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_weight="1"
                    android:background="#F8FF3B"
                    android:lineSpacingExtra="8sp"
                    android:text="  9  " />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_weight="1"
                    android:background="#D80E2C"
                    android:text="  8  " />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_weight="1"
                    android:background="#D80E2C"
                    android:text="  7  "
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_weight="1"
                    android:background="#357BE3"
                    android:text="  6  "
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_weight="1"
                    android:background="#357BE3"
                    android:text="  5  " />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_weight="1"
                    android:background="#00050B"
                    android:text="  4  "
                    android:textColor="#FAF6F6" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_weight="1"
                    android:background="#00050B"
                    android:text="  3  "
                    android:textColor="#FAF6F6" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_weight="1"
                    android:background="#FAF6F6"
                    android:text="  2  "
                    android:textColor="#00050B" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_weight="1"
                    android:background="#FAF6F6"
                    android:text="  1  "
                    android:textColor="#00050B" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_rowWeight="1"
                android:layout_weight="1">

                <Button
                    android:id="@+id/Manque"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_weight="1"
                    android:text="Manque" />

                <Button
                    android:id="@+id/Annul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_weight="1"
                    android:text="Annul" />

                <Button
                    android:id="@+id/bPreviousArcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_weight="1"
                    android:background="@drawable/archer_previous" />

                <Button
                    android:id="@+id/bNextArcher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_weight="1"
                    android:background="@drawable/archer_next" />

            </TableRow>
        </TableLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="46dp"
        android:layout_height="24dp"
        android:text="@string/End"
        app:layout_constraintStart_toStartOf="@+id/ArrowValue"
        app:layout_constraintTop_toBottomOf="@+id/archer" />


</androidx.constraintlayout.widget.ConstraintLayout>